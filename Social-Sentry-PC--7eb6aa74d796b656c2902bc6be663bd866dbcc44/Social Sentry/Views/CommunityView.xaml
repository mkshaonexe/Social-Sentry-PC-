<UserControl x:Class="Social_Sentry.Views.CommunityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Social_Sentry.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="CommunitySectionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="Background" Value="#1AFFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="32,24">
            <!-- Header -->
            <TextBlock Text="Community" FontSize="28" FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,8"/>
            <TextBlock Text="Connect with others on their digital wellbeing journey" 
                       FontSize="14" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,32"/>

            <!-- Main Community Sections -->
            <StackPanel>
                <!-- Global Chat -->
                <Button Command="{Binding OpenGlobalChatCommand}" Style="{StaticResource CommunitySectionButtonStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon -->
                        <Border Grid.Column="0" Width="56" Height="56" CornerRadius="12" Margin="0,0,24,0">
                            <Border.Background>
                                <SolidColorBrush Color="#00E676" Opacity="0.15"/>
                            </Border.Background>
                            <TextBlock Text="ðŸ’¬" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Text -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Global Chat" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,4"/>
                            <TextBlock Text="Join the real-time conversation with the global community" 
                                       FontSize="14" Foreground="{StaticResource SecondaryTextBrush}"/>
                        </StackPanel>

                        <!-- Arrow -->
                        <TextBlock Grid.Column="2" Text="âžœ" FontSize="24" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center" Margin="16,0,0,0"/>
                    </Grid>
                </Button>

                <!-- Global Challenge -->
                <Button Command="{Binding OpenGlobalChallengeCommand}" Style="{StaticResource CommunitySectionButtonStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <Border Grid.Column="0" Width="56" Height="56" CornerRadius="12" Margin="0,0,24,0">
                            <Border.Background>
                                <SolidColorBrush Color="#FF9800" Opacity="0.15"/>
                            </Border.Background>
                            <TextBlock Text="ðŸŒ" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Text -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Global Challenge" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,4"/>
                            <TextBlock Text="Participate in collective challenges to reduce screen time" 
                                       FontSize="14" Foreground="{StaticResource SecondaryTextBrush}"/>
                        </StackPanel>

                        <!-- Arrow -->
                        <TextBlock Grid.Column="2" Text="âžœ" FontSize="24" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center" Margin="16,0,0,0"/>
                    </Grid>
                </Button>

                <!-- Your Story -->
                <Button Command="{Binding OpenYourStoryCommand}" Style="{StaticResource CommunitySectionButtonStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <Border Grid.Column="0" Width="56" Height="56" CornerRadius="12" Margin="0,0,24,0">
                            <Border.Background>
                                <SolidColorBrush Color="#00BCD4" Opacity="0.15"/>
                            </Border.Background>
                            <TextBlock Text="ðŸ“–" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Text -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Your Story" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,4"/>
                            <TextBlock Text="Share your journey and inspire others" 
                                       FontSize="14" Foreground="{StaticResource SecondaryTextBrush}"/>
                        </StackPanel>

                        <!-- Arrow -->
                        <TextBlock Grid.Column="2" Text="âžœ" FontSize="24" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center" Margin="16,0,0,0"/>
                    </Grid>
                </Button>
            </StackPanel>

            <!-- Community Stats Section -->
            <Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="12" Padding="24" Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="Community Insights" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,16"/>
                    <UniformGrid Columns="3">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="12.5k" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Active Members" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="452" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Missions Completed" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="1.2k" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Stories Shared" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </UniformGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
