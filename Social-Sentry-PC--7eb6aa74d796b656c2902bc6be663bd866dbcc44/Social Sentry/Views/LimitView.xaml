<UserControl x:Class="Social_Sentry.Views.LimitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Social_Sentry.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="32,24">
            <!-- Header -->
            <TextBlock Text="Usage Limits" FontSize="28" FontWeight="Bold" 
                      Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,24"/>
            
            <TextBlock Text="Set time limits for apps to help manage your screen time" 
                      FontSize="14" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,32"/>

            <!-- Daily Limit Card -->
            <Border Background="{StaticResource CardBackgroundBrush}" 
                   CornerRadius="12" Padding="24" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Daily Limit" FontSize="20" FontWeight="SemiBold"
                              Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,16"/>
                    
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Total Screen Time" FontSize="14"
                                      Foreground="{StaticResource SecondaryTextBrush}"/>
                            <TextBlock Text="Set maximum daily usage" FontSize="12"
                                      Foreground="{StaticResource SecondaryTextBrush}" Opacity="0.7"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox Width="60" Height="32" FontSize="16" 
                                    Text="{Binding DailyLimitHours, UpdateSourceTrigger=PropertyChanged}"
                                    VerticalContentAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="hours" VerticalAlignment="Center"
                                      Foreground="{StaticResource SecondaryTextBrush}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- App-Specific Limits -->
            <TextBlock Text="App-Specific Limits" FontSize="20" FontWeight="SemiBold"
                      Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,16"/>

            <ItemsControl ItemsSource="{Binding AppLimits}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource CardBackgroundBrush}" 
                               CornerRadius="12" Padding="20" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding AppName}" FontSize="16" FontWeight="SemiBold"
                                              Foreground="{StaticResource PrimaryTextBrush}"/>
                                    <TextBlock Text="{Binding CurrentUsage}" FontSize="12"
                                              Foreground="{StaticResource SecondaryTextBrush}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,16,0">
                                    <TextBox Width="50" Height="28" FontSize="14" 
                                            Text="{Binding LimitMinutes, UpdateSourceTrigger=PropertyChanged}"
                                            VerticalContentAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="min/day" VerticalAlignment="Center"
                                              Foreground="{StaticResource SecondaryTextBrush}"/>
                                </StackPanel>
                                
                                <CheckBox Grid.Column="2" Content="Block when exceeded" 
                                         IsChecked="{Binding BlockWhenExceeded}"
                                         VerticalAlignment="Center"
                                         Foreground="{StaticResource SecondaryTextBrush}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Save Button -->
            <Button Content="Save Limits" Background="{StaticResource AccentBrush}" 
                   Foreground="White" FontSize="16" FontWeight="SemiBold"
                   Padding="24,12" Margin="0,24,0,0" HorizontalAlignment="Left"
                   Command="{Binding SaveLimitsCommand}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </ScrollViewer>
</UserControl>
