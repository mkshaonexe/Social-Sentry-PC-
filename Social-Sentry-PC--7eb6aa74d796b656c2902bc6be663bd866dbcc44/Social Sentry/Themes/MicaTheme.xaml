<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Modern Mica-like Colors -->
    <!-- Using a slightly transparent-looking dark gray for that deep integration look -->
    <Color x:Key="WindowBackgroundColor">#202020</Color> 
    <Color x:Key="CardBackgroundColor">#2C2C2C</Color>
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#B0B3B8</Color>
    
    <!-- Brand Colors -->
    <Color x:Key="AccentColor">#00E676</Color>
    <Color x:Key="AccentSecondaryColor">#69F0AE</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <!-- Adding a slight opacity to card background for layering effect if desired, but solid is safer -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource AccentSecondaryColor}"/>

    <!-- Interface Brushes -->
    <SolidColorBrush x:Key="BorderBrush" Color="#2AFFFFFF"/> <!-- More subtle border -->
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#15FFFFFF"/>
    <SolidColorBrush x:Key="PressedBackgroundBrush" Color="#25FFFFFF"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#333333"/>
    
    <!-- Custom Title Bar Specifics -->
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="TitleBarForegroundBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="TitleBarHoverBrush" Color="#1FFFFFFF"/>
    <SolidColorBrush x:Key="TitleBarCloseHoverBrush" Color="#C42B1C"/>

</ResourceDictionary>
