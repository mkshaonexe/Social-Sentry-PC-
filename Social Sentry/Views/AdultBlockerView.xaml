<UserControl x:Class="Social_Sentry.Views.AdultBlockerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Social_Sentry.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="32,24">
            <!-- Header -->
            <TextBlock Text="Adult Blocker" FontSize="28" FontWeight="Bold" 
                      Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,24"/>

            <TextBlock Text="Protect yourself from inappropriate content" 
                      FontSize="14" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,32"/>

            <!-- Main Card -->
            <Border Background="{StaticResource CardBackgroundBrush}" 
                   CornerRadius="12" Padding="24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Block Adult Content" FontSize="18" FontWeight="SemiBold"
                                  Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="Strictly blocks access to known adult websites and inappropriate search terms." 
                                  FontSize="14" Foreground="{StaticResource SecondaryTextBrush}"
                                  TextWrapping="Wrap" MaxWidth="500" HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Toggle Switch -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Orientation="Horizontal">
                         <TextBlock Text="{Binding IsEnabled, Converter={StaticResource BooleanToStatusConverter}}" 
                                  VerticalAlignment="Center" Margin="0,0,16,0"
                                  Foreground="{Binding IsEnabled, Converter={StaticResource BooleanToColorConverter}}"
                                  FontWeight="SemiBold"/>
                                  
                        <CheckBox IsChecked="{Binding IsEnabled}" Style="{StaticResource ToggleSwitchStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
             <Border Background="#1AF44336" CornerRadius="8" Padding="16" Margin="0,24,0,0"
                    BorderBrush="#33F44336" BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ›¡ï¸" FontSize="20" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <TextBlock Text="This feature uses a comprehensive database of sites to ensure safety." 
                              Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
