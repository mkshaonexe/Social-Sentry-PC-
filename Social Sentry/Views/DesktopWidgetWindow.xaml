<Window x:Class="Social_Sentry.Views.DesktopWidgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Social_Sentry.Views"
        xmlns:vm="clr-namespace:Social_Sentry.ViewModels"
        mc:Ignorable="d"
        Title="Social Sentry Widget" Height="140" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="False"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Border Background="#CC1A1C1E" CornerRadius="20" BorderBrush="#33FFFFFF" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="4" Direction="270" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header / Status -->
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Social Sentry" Foreground="#B0B3B8" FontSize="11" Margin="0,0,0,4"/>
                </StackPanel>
            </Grid>

            <!-- Main Stats -->
            <Grid Grid.Row="1" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/> <!-- Separator -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Time -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding ScreenTimeText}" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Total Screen Time" 
                               FontSize="10" 
                               Foreground="#B0B3B8" 
                               HorizontalAlignment="Center"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <Rectangle Grid.Column="1" Width="1" Fill="#33FFFFFF" Margin="8,4"/>

                <!-- Distracting Time -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding DistractingTimeText}" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="#FF5252" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Distracting Time" 
                               FontSize="10" 
                               Foreground="#B0B3B8" 
                               HorizontalAlignment="Center"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Interaction Prompt (Optional) -->
            <!-- <TextBlock Grid.Row="2" Text="Double click to open" FontSize="9" Foreground="#66FFFFFF" HorizontalAlignment="Center" Margin="0,4,0,0"/> -->
        </Grid>
    </Border>
</Window>
