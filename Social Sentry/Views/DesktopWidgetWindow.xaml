<Window x:Class="Social_Sentry.Views.DesktopWidgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Social_Sentry.Views"
        xmlns:vm="clr-namespace:Social_Sentry.ViewModels"
        mc:Ignorable="d"
        Title="Social Sentry Widget" Height="140" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="False"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Border Background="{DynamicResource WidgetBackgroundBrush}" CornerRadius="12" BorderBrush="#33FFFFFF" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="4" Direction="270" Opacity="0.5"/>
        </Border.Effect>
        <Border.Resources>
            <SolidColorBrush x:Key="WidgetBackgroundBrush" Color="#CC1A1C1E"/>
        </Border.Resources>
        
        <Grid Margin="16">
            <!-- Minimal View -->
            <Grid x:Name="MinimalView">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding WidgetStyle}" Value="Minimal">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Social Sentry" Foreground="#B0B3B8" FontSize="11" Margin="0,0,0,4"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ScreenTimeText}" FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Screen Time" FontSize="10" Foreground="#B0B3B8" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>

                    <Rectangle Grid.Column="1" Width="1" Fill="#33FFFFFF" Margin="8,4"/>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{Binding DistractingTimeText}" FontSize="22" FontWeight="Bold" Foreground="#FF5252" HorizontalAlignment="Center"/>
                        <TextBlock Text="Distracting Time" FontSize="10" Foreground="#B0B3B8" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Graph View -->
            <Grid x:Name="GraphView">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding WidgetStyle}" Value="Graph">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,8">
                     <TextBlock Foreground="White" FontSize="14">
                        <Run Text="Total Screen Time: " Foreground="#B0B3B8"/>
                        <Run Text="{Binding ScreenTimeText}" FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>

                <!-- Graph -->
                <Grid Grid.Row="1" ClipToBounds="True">
                     <Polygon Points="{Binding ChartPoints}" Fill="#00E676" Opacity="0.8" Stretch="Fill"/>
                     <Polyline Points="{Binding ChartPoints}" Stroke="#00C853" StrokeThickness="2" Stretch="Fill"/>
                </Grid>
                
                <!-- X Axis Labels -->
                <Grid Grid.Row="2" Margin="0,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="00:00" FontSize="9" Foreground="#66FFFFFF"/>
                    <TextBlock Grid.Column="2" Text="12:00" FontSize="9" Foreground="#66FFFFFF" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="4" Text="18:00" FontSize="9" Foreground="#66FFFFFF"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
