<Window x:Class="Social_Sentry.Views.ReelsBlockerOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reels Blocked" Height="450" Width="800"
        WindowStyle="None" ResizeMode="NoResize" WindowState="Maximized"
        Topmost="True" ShowInTaskbar="False" Focusable="True"
        Background="#CC000000">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ActionBytes">
            <Setter Property="Background" Value="#33FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#44FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Border Background="#1A1A1A" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Padding="40" 
                CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="Black" Opacity="0.5"/>
            </Border.Effect>
            
            <StackPanel Width="400">
                <!-- Icon -->
                <Border Width="80" Height="80" CornerRadius="40" Background="#33F44336" HorizontalAlignment="Center" Margin="0,0,0,24">
                     <TextBlock Text="ðŸš«" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#F44336"/>
                </Border>
                
                <TextBlock Text="Reels Blocked" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,12"/>
                
                <TextBlock Text="Social Sentry has blocked this short-form content to help you stay focused." 
                           FontSize="16" 
                           Foreground="#AAAAAA" 
                           TextWrapping="Wrap" 
                           TextAlignment="Center" 
                           Margin="0,0,0,32"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Go Back" 
                            Style="{StaticResource ActionBytes}" 
                            Click="GoBack_Click"
                            Margin="0,0,16,0"
                            Width="120"/>
                            
                    <Button Content="Turn Off Blocker" 
                            Style="{StaticResource ActionBytes}" 
                            Click="TurnOff_Click"
                            Background="#33F44336"
                            Width="140"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
