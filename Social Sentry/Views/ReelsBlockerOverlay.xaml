<Window x:Class="Social_Sentry.Views.ReelsBlockerOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reels Blocked" Height="450" Width="800"
        WindowStyle="None" ResizeMode="NoResize" WindowState="Maximized"
        Topmost="True" ShowInTaskbar="False" Focusable="True"
        Background="#CC000000">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ActionBytes">
            <Setter Property="Background" Value="#33FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#44FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Border Background="#1A1A1A" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Padding="40" 
                CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="Black" Opacity="0.5"/>
            </Border.Effect>
            
            <Grid>
                <!-- Main Content Panel -->
                <StackPanel x:Name="MainPanel" Width="400">
                    <!-- Icon -->
                    <Border Width="80" Height="80" CornerRadius="40" Background="#33F44336" HorizontalAlignment="Center" Margin="0,0,0,24">
                        <TextBlock Text="ðŸš«" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#F44336"/>
                    </Border>
                    
                    <TextBlock Text="Reels Blocked" 
                            FontSize="28" 
                            FontWeight="Bold" 
                            Foreground="White" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,12"/>
                    
                    <TextBlock Text="Social Sentry has blocked this short-form content to help you stay focused." 
                            FontSize="16" 
                            Foreground="#AAAAAA" 
                            TextWrapping="Wrap" 
                            TextAlignment="Center" 
                            Margin="0,0,0,32"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Go Back" 
                                Style="{StaticResource ActionBytes}" 
                                Click="GoBack_Click"
                                Margin="0,0,16,0"
                                Width="120"/>
                                
                        <Button Content="Turn Off Blocker" 
                                Style="{StaticResource ActionBytes}" 
                                Click="ShowTimeSelection_Click"
                                Background="#33F44336"
                                Width="140"/>
                    </StackPanel>
                </StackPanel>

                <!-- Time Selection Panel (Initially Hidden) -->
                <StackPanel x:Name="TimeSelectionPanel" Width="400" Visibility="Collapsed">
                    <TextBlock Text="Pause Blocker" 
                            FontSize="24" 
                            FontWeight="Bold" 
                            Foreground="White" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,24"/>

                    <TextBlock Text="Select how long to disable the blocker:" 
                            FontSize="16" 
                            Foreground="#AAAAAA" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,20"/>

                    <UniformGrid Columns="2" Rows="2" Margin="0,0,0,20"> <!-- Removed Gap, using Margins on buttons -->
                        <Button Content="1 Minute" Click="TimeOption_Click" Tag="1" Style="{StaticResource ActionBytes}" Margin="5"/>
                        <Button Content="2 Minutes" Click="TimeOption_Click" Tag="2" Style="{StaticResource ActionBytes}" Margin="5"/>
                        <Button Content="5 Minutes" Click="TimeOption_Click" Tag="5" Style="{StaticResource ActionBytes}" Margin="5"/>
                        <Button Content="10 Minutes" Click="TimeOption_Click" Tag="10" Style="{StaticResource ActionBytes}" Margin="5"/>
                    </UniformGrid>

                    <Button Content="Cancel" 
                                Style="{StaticResource ActionBytes}" 
                                Click="CancelSelection_Click"
                                HorizontalAlignment="Center"
                                Width="120"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
