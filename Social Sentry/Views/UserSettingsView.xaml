<UserControl x:Class="Social_Sentry.Views.UserSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Social_Sentry.Views"
             xmlns:converters="clr-namespace:Social_Sentry.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="32,24">
            <!-- Header -->
            <TextBlock Text="Settings" FontSize="28" FontWeight="Bold" 
                      Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,24"/>

            <!-- Appearance Settings (NEW) -->
            <Border Background="{DynamicResource CardBackgroundBrush}" 
                   CornerRadius="12" Padding="24" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Appearance" FontSize="20" FontWeight="SemiBold"
                              Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,20"/>
                    
                    <!-- Theme -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel>
                            <TextBlock Text="Theme" FontSize="14"
                                      Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Text="Choose your preferred appearance" 
                                      FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </StackPanel>
                        
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding AvailableThemes}" 
                                  SelectedItem="{Binding SelectedTheme}"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource ModernComboBoxStyle}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- General Settings -->
            <Border Background="{DynamicResource CardBackgroundBrush}" 
                   CornerRadius="12" Padding="24" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="General" FontSize="20" FontWeight="SemiBold"
                              Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,20"/>
                    
                    <!-- Start with Windows -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel>
                            <TextBlock Text="Start with Windows" FontSize="14"
                                      Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Text="Launch Social Sentry automatically when you log in" 
                                      FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </StackPanel>
                        
                        <CheckBox Grid.Column="1" IsChecked="{Binding StartWithWindows}" 
                                 VerticalAlignment="Center"
                                 Style="{StaticResource ToggleSwitchStyle}"/>
                    </Grid>

                    <!-- Start Minimized -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel>
                            <TextBlock Text="Start Minimized" FontSize="14"
                                      Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Text="Start the app minimized to system tray" 
                                      FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </StackPanel>
                        
                        <CheckBox Grid.Column="1" IsChecked="{Binding StartMinimized}" 
                                 VerticalAlignment="Center"
                                 Style="{StaticResource ToggleSwitchStyle}"/>
                    </Grid>

                    <!-- Show Desktop Widget Section -->
                    <Grid Margin="0,0,0,16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Toggle Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Desktop Widget" FontSize="14" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <TextBlock Text="Display a floating widget with screen time stats" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            </StackPanel>
                            <CheckBox Grid.Column="1" IsChecked="{Binding ShowDesktopWidget}" VerticalAlignment="Center" Style="{StaticResource ToggleSwitchStyle}"/>
                        </Grid>

                        <!-- Widget Configuration (Visible only when enabled) -->
                        <StackPanel Grid.Row="1" Visibility="{Binding ShowDesktopWidget, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel>
                                    <TextBlock Text="Widget Style" FontSize="14" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    <TextBlock Text="Choose how the widget looks on your desktop" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Orientation="Horizontal">
                                    <RadioButton Content="Graph" 
                                                IsChecked="{Binding SelectedWidgetStyle, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Graph}"
                                                GroupName="WidgetStyleGroup"
                                                Margin="0,0,16,0"/>
                                    
                                    <RadioButton Content="Minimal" 
                                                IsChecked="{Binding SelectedWidgetStyle, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Minimal}"
                                                GroupName="WidgetStyleGroup"/>
                                </StackPanel>
                            </Grid>

                            <!-- Preview Area -->
                            <Border Background="#1A1C1E" CornerRadius="12" Padding="20" Margin="0,8,0,0" BorderBrush="#33FFFFFF" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Preview" FontSize="12" Foreground="#808080" Margin="0,0,0,12" HorizontalAlignment="Center"/>
                                    
                                    <!-- Minimal Preview -->
                                    <Grid HorizontalAlignment="Center" Width="280">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedWidgetStyle}" Value="Minimal">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        
                                        <Border Background="#2C2C2E" CornerRadius="20" Padding="16">
                                             <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                    <TextBlock Text="2h 45m" FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Screen Time" FontSize="10" Foreground="#B0B3B8" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                                <Rectangle Grid.Column="1" Width="1" Fill="#33FFFFFF" Margin="8,4"/>
                                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                                    <TextBlock Text="15m" FontSize="22" FontWeight="Bold" Foreground="#FF5252" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Distracted" FontSize="10" Foreground="#B0B3B8" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Grid>

                                    <!-- Graph Preview -->
                                    <Grid HorizontalAlignment="Center" Width="280">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedWidgetStyle}" Value="Graph">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        
                                        <Border Background="#2C2C2E" CornerRadius="12" Padding="16">
                                             <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="60"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <TextBlock Text="Total Screen Time: 2h 45m" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                                                
                                                <!-- Mock Graph -->
                                                <Polygon Grid.Row="1" Points="0,60 40,40 80,50 120,20 160,30 200,10 240,40 280,60" Fill="#00E676" Opacity="0.8" Stretch="Fill"/>
                                                
                                                 <Grid Grid.Row="2" Margin="0,4,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="00:00" FontSize="9" Foreground="#66FFFFFF"/>
                                                    <TextBlock Grid.Column="2" Text="12:00" FontSize="9" Foreground="#66FFFFFF"/>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </Grid>

                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Show Notifications -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel>
                            <TextBlock Text="Show Notifications" FontSize="14"
                                      Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Text="Get notified when you exceed usage limits" 
                                      FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </StackPanel>
                        
                        <CheckBox Grid.Column="1" IsChecked="{Binding ShowNotifications}" 
                                 VerticalAlignment="Center"
                                 Style="{StaticResource ToggleSwitchStyle}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- AI Assistant (Hakari) -->
            <Border Background="{DynamicResource CardBackgroundBrush}" 
                   CornerRadius="12" Padding="24" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="AI Assistant" FontSize="20" FontWeight="SemiBold"
                              Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,20"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel>
                            <TextBlock Text="Enable Hakari AI" FontSize="14"
                                      Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Text="Receive personalized check-ins and motivational reminders from Hakari" 
                                      FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" TextWrapping="Wrap" MaxWidth="400" HorizontalAlignment="Left"/>
                        </StackPanel>
                        
                        <CheckBox Grid.Column="1" IsChecked="{Binding IsHakariEnabled}" 
                                 VerticalAlignment="Center"
                                 Style="{StaticResource ToggleSwitchStyle}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Data Management -->
            <Border Background="{DynamicResource CardBackgroundBrush}" 
                   CornerRadius="12" Padding="24" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Data Management" FontSize="20" FontWeight="SemiBold"
                              Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,20"/>
                    
                    <!-- Export Data -->
                   <Button Content="Export Data" Margin="0,0,0,12" HorizontalAlignment="Left"
                           Command="{Binding ExportDataCommand}"
                           Style="{StaticResource ActionButtonStyle}" Padding="16,8"/>
                    
                    <!-- Clear Data -->
                    <Button Content="Clear All Data" HorizontalAlignment="Left"
                           Command="{Binding ClearDataCommand}"
                           Style="{StaticResource ActionButtonStyle}" Padding="16,8">
                        <Button.Foreground>
                            <SolidColorBrush Color="#FF5252"/>
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Extensions (New Section) -->
            <Border Background="{DynamicResource CardBackgroundBrush}" 
                   CornerRadius="12" Padding="24" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Extensions" FontSize="20" FontWeight="SemiBold"
                              Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,20"/>
                    
                    <ItemsControl ItemsSource="{Binding BrowserExtensions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Icon Placeholder -->
                                    <Border Width="32" Height="32" Background="#30FFFFFF" CornerRadius="8" Margin="0,0,12,0">
                                        <TextBlock Text="{Binding Icon}" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                  FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontSize="14" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    </StackPanel>
                                    
                                    <Button Grid.Column="2" Content="Install" 
                                            Command="{Binding DataContext.InstallExtensionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding Name}"
                                            Style="{StaticResource ActionButtonStyle}" 
                                            Padding="12,6" FontSize="12"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Developer Mode Settings (Hidden by default) -->
            <Border Background="{DynamicResource CardBackgroundBrush}" 
                   CornerRadius="12" Padding="24" Margin="0,0,0,20"
                   Visibility="{Binding IsDeveloperModeEnabled, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="Developer Options" FontSize="20" FontWeight="SemiBold"
                              Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Advanced debugging tools." FontSize="14" 
                              Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,16"/>

                    <!-- Toggle Features (New) -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Ranking Page" FontSize="14" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Text="Show the Global Ranking page in sidebar" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </StackPanel>
                        <CheckBox Grid.Column="1" IsChecked="{Binding IsRankingEnabled}" 
                                  VerticalAlignment="Center" Style="{StaticResource ToggleSwitchStyle}"/>
                    </Grid>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Raw Data" FontSize="14" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Text="Show the Raw Data page in sidebar" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </StackPanel>
                        <CheckBox Grid.Column="1" IsChecked="{Binding IsRawDataEnabled}" 
                                  VerticalAlignment="Center" Style="{StaticResource ToggleSwitchStyle}"/>
                    </Grid>

                    <Separator Background="#333" Margin="0,8,0,24"/>
                              
                    <!-- Debug Features -->
                     <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="View Build Logs" FontSize="14" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Text="Open the latest build log file" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </StackPanel>
                        <Button Grid.Column="1" Content="Open Logs" Command="{Binding OpenDevLogsCommand}"
                                Style="{StaticResource ActionButtonStyle}" Padding="12,6"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                         <StackPanel>
                            <TextBlock Text="App Data Folder" FontSize="14" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Text="Open the application data directory" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </StackPanel>
                        <Button Grid.Column="1" Content="Open Folder" Command="{Binding OpenDataFolderCommand}"
                                Style="{StaticResource ActionButtonStyle}" Padding="12,6"/>
                    </Grid>

                </StackPanel>
            </Border>

            <!-- About -->
            <Border Background="{DynamicResource CardBackgroundBrush}" 
                   CornerRadius="12" Padding="24">
                <StackPanel>
                    <TextBlock Text="About" FontSize="20" FontWeight="SemiBold"
                              Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,16"/>
                    
                    <TextBlock FontSize="14" Foreground="{DynamicResource SecondaryTextBrush}">
                        <Run Text="Social Sentry" FontWeight="SemiBold"/>
                        <LineBreak/>
                        <!-- Version click trigger -->
                        <Hyperlink Command="{Binding UnlockDeveloperModeCommand}" TextDecorations="None" Foreground="{DynamicResource SecondaryTextBrush}">
                            <Run Text="Version 1.0.0"/>
                        </Hyperlink>
                        <LineBreak/>
                        <LineBreak/>
                        <Run Text="A powerful digital wellbeing tool to track and manage your screen time."/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
