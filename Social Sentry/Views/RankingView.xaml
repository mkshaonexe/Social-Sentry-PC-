<UserControl x:Class="Social_Sentry.Views.RankingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Social_Sentry.Views"
             xmlns:vm="clr-namespace:Social_Sentry.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:RankingViewModel/>
    </UserControl.DataContext>

    <Grid Background="#121212">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Badges Carousel -->
            <RowDefinition Height="Auto"/> <!-- Timer/Progress -->
            <RowDefinition Height="50"/>   <!-- Bottom Spacer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="NO FAP RANK" 
                   Foreground="White" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,0"/>

        <!-- Badges Section (Simplified Carousel as ListBox with items panel) -->
        <ListBox Grid.Row="1" 
                 ItemsSource="{Binding AllBadges}" 
                 SelectedItem="{Binding CurrentBadge}"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Width="200" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Badge Image -->
                        <Image Source="{Binding ImagePath}" 
                               Width="120" Height="120" 
                               HorizontalAlignment="Center"/>
                        
                        <!-- Title -->
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding Title}" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,10,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Timer & Progress Section -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,30">
            <!-- Circular Progress (represented as Border for now, fully custom arc requires Path) -->
            <Grid Width="150" Height="150">
                <Ellipse Stroke="#333" StrokeThickness="5"/>
                <!-- We would need a custom control or Path for actual partial arc progress -->
                <Ellipse Stroke="#00BCD4" StrokeThickness="5" StrokeDashArray="100,100" /> <!-- Fake progress -->
                
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding CurrentDays}" 
                               Foreground="White" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Days" 
                               Foreground="Gray" 
                               FontSize="12" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding StrikeTimeText}" 
                               Foreground="White" 
                               FontSize="14" 
                               Margin="0,5,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
