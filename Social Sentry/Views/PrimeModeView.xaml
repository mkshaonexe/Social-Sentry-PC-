<UserControl x:Class="Social_Sentry.Views.PrimeModeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Social_Sentry.Views"
             xmlns:vm="clr-namespace:Social_Sentry.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:PrimeModeViewModel/>
    </UserControl.DataContext>
    
    <Grid Background="#121212">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Crown Icon -->
            <TextBlock Text="ðŸ‘‘" 
                       FontSize="80" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,24"/>
            
            <TextBlock Text="Prime Mode" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="Strict enforcement preventing distraction." 
                       FontSize="16" 
                       Foreground="Gray" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>
            
            <!-- Toggle (Checkbox styled as toggle simplified) -->
            <CheckBox IsChecked="{Binding IsPrimeModeEnabled}" 
                      Content="Enable Prime Mode"
                      Foreground="White"
                      FontSize="18"
                      HorizontalAlignment="Center">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                </CheckBox.LayoutTransform>
            </CheckBox>
        </StackPanel>
    </Grid>
</UserControl>
