<UserControl x:Class="Social_Sentry.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{StaticResource WindowBackgroundBrush}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Chart -->
                <RowDefinition Height="Auto"/> <!-- Setup Card -->
                <RowDefinition Height="*"/>    <!-- Usage List -->
            </Grid.RowDefinitions>

            <!-- 1. Header -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Dashboard" FontSize="28" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center"/>

                <!-- Date Navigation (Center) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="‹" Command="{Binding PreviousDateCommand}" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryTextBrush}" FontSize="20" FontWeight="Bold" Padding="8,0" Cursor="Hand"/>
                    <TextBlock Text="{Binding SelectedDate, StringFormat='{}{0:D}'}" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center" Margin="16,0" FontSize="14"/>
                    <Button Content="›" Command="{Binding NextDateCommand}" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryTextBrush}" FontSize="20" FontWeight="Bold" Padding="8,0" Cursor="Hand"/>
                </StackPanel>

                <!-- Scope Selector (Right) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <ComboBox ItemsSource="{Binding Scopes}" SelectedItem="{Binding SelectedScope}"
                              Foreground="{StaticResource PrimaryTextBrush}"
                              Background="{StaticResource CardBackgroundBrush}"
                              Padding="8,4" MinWidth="100" BorderThickness="1" BorderBrush="#333">
                    </ComboBox>
                </StackPanel>
            </Grid>

            <!-- 2. Chart Section -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="Total Screen Time: " Foreground="{StaticResource SecondaryTextBrush}" FontSize="16"/>
                        <TextBlock Text="{Binding TotalUsageTime}" Foreground="{StaticResource PrimaryTextBrush}" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Simple Bar Chart Visualization logic -->
                    <!-- We use an ItemsControl to lay out bars horizontally -->
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding ChartData}" VerticalAlignment="Bottom">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1"/> 
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid VerticalAlignment="Bottom" Margin="4" ToolTip="{Binding TooltipText}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/> <!-- The Bar Area -->
                                        <RowDefinition Height="Auto"/> <!-- Label -->
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Bar Background -->
                                    <Border Grid.Row="0" Height="150" VerticalAlignment="Bottom">
                                         <!-- The actual bar with dynamic height requires a converter or direct binding to Height if Value was absolute. 
                                              For now, we will simulate it with a ScaleTransform or simple relative height if possible. 
                                              Actually, a simple way without converters is to bind Height to a scaled property, but let's try a Grid with star sizing approach if we can, or just a simple fixed height for the bar container and a relative sized object inside. -->
                                         
                                         <!-- Since we can't easily do percentage height without a converter in pure XAML standard, 
                                              we will use a Grid with a weighted row definition if 'Value' was a star width, 
                                              but here we want vertical. 
                                              
                                              Hack for pure XAML: Use a ScaleTransform on the Y axis bound to Value (0.0 to 1.0) -->
                                         <Border Background="{StaticResource AccentBrush}" CornerRadius="4" Width="20" VerticalAlignment="Bottom" Height="150">
                                             <Border.RenderTransform>
                                                 <ScaleTransform ScaleY="{Binding Value}" CenterY="150"/> 
                                             </Border.RenderTransform>
                                         </Border>
                                    </Border>
                                    
                                    <TextBlock Grid.Row="1" Text="{Binding TimeLabel}" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="12"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <!-- 3. Complete Setup Card (Hidden) -->
            <Border Grid.Row="2" Height="0" Margin="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Complete Social Sentry Setup (0/2)" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="1. Pair this app with Social Sentry on another platform." Foreground="{StaticResource SecondaryTextBrush}" TextWrapping="Wrap" Margin="0,0,0,4"/>
                        <TextBlock Text="2. Create your first Usage Limit." Foreground="{StaticResource SecondaryTextBrush}" TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <Button Content="Pair Device" Background="#9C89FF" Foreground="White" Padding="12,6" Margin="0,0,0,8">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="16" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="Create Limit" Background="#9C89FF" Foreground="White" Padding="12,6">
                             <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="16" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 4. Your Usage List -->
            <StackPanel Grid.Row="3">
                <TextBlock Text="Your Usage" Foreground="{StaticResource PrimaryTextBrush}" FontSize="18" Margin="0,0,0,16"/>
                
                <ItemsControl ItemsSource="{Binding TopApps}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/> <!-- Icon -->
                                    <ColumnDefinition Width="*"/>    <!-- Bar & Name -->
                                    <ColumnDefinition Width="Auto"/> <!-- Time -->
                                </Grid.ColumnDefinitions>

                                <!-- App Icon -->
                                <Border Width="40" Height="40" CornerRadius="8" Margin="0,0,16,0" ClipToBounds="True">
                                    <Image Source="{Binding Icon}" Stretch="UniformToFill" />
                                </Border>

                                <!-- Details -->
                                <Grid Grid.Column="1" VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- App Name -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                                        <TextBlock Text="{Binding Name}" Foreground="{StaticResource PrimaryTextBrush}" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <!-- Progress Bar -->
                                    <Grid Grid.Row="1" Height="4" Margin="0,0,0,6">
                                        <Border Background="#333" CornerRadius="2"/>
                                        <!-- Fill -->
                                         <Border Background="{StaticResource AccentBrush}" CornerRadius="2" HorizontalAlignment="Stretch">
                                             <Border.RenderTransform>
                                                 <ScaleTransform ScaleX="{Binding Percentage}"/>
                                             </Border.RenderTransform>
                                         </Border>
                                    </Grid>
                                    
                                    <!-- Sessions Count -->
                                    <TextBlock Grid.Row="2" Text="{Binding Sessions, StringFormat='{}{0} sessions'}" 
                                               Foreground="{StaticResource SecondaryTextBrush}" FontSize="11"/>

                                </Grid>

                                <!-- Time & % -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding Duration}" Foreground="{StaticResource PrimaryTextBrush}" HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding Percentage, StringFormat={}{0:P0}}" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Right" FontSize="12"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>
