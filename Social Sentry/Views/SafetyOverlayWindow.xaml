<Window x:Class="Social_Sentry.Views.SafetyOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Safety Break" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Topmost="True"
        Background="#121212"
        ShowInTaskbar="False">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <TextBlock x:Name="IconText" 
                       Text="ðŸ‘ï¸" 
                       FontSize="72" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,24"/>

            <TextBlock Text="Safety Break" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,16"/>

            <TextBlock Text="This break is happening because you enabled the Safety Feature." 
                       FontSize="16" 
                       Foreground="#888888" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,8"/>

            <TextBlock Text="It's good for your eyes! Look at something green or in the distance (sky/nature) to relax." 
                       FontSize="18" 
                       Foreground="#DDDDDD" 
                       HorizontalAlignment="Center" 
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Width="600"
                       Margin="0,0,0,48"/>

            <Border Background="#33FFFFFF" 
                    CornerRadius="12" 
                    Padding="32,16" 
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock x:Name="TimerText" 
                               Text="30" 
                               FontSize="48" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource AccentBrush}" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="seconds remaining" 
                               FontSize="14" 
                               Foreground="#888888" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Button x:Name="SkipButton"
                    Content="Skip Break"
                    Margin="0,48,0,0"
                    Padding="24,12"
                    Background="Transparent"
                    Foreground="#666666"
                    BorderThickness="0"
                    Cursor="Hand"
                    Visibility="Collapsed"
                    Click="SkipButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>
    </Grid>
</Window>
