<UserControl x:Class="Social_Sentry.Views.CategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Social_Sentry.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <Style x:Key="CategoryItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="32,24">
            <!-- Header -->
            <TextBlock Text="Categories" FontSize="28" FontWeight="Bold" 
                      Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,8"/>
            
            <TextBlock Text="Organize your apps into categories to better understand your usage patterns" 
                      FontSize="14" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,32"/>

            <!-- Donut Chart Section -->
            <Grid Height="250" Margin="0,0,0,40">
                <!-- Canvas for manual drawing of Arcs -->
                <Canvas x:Name="ChartCanvas" Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
                <!-- Center Text -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Total Time" Foreground="{StaticResource SecondaryTextBrush}" 
                               FontSize="14" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalUsageFormatted}" Foreground="{StaticResource PrimaryTextBrush}" 
                               FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Category List -->
            <ItemsControl ItemsSource="{Binding Categories}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CategoryItemStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/> <!-- Dot -->
                                    <ColumnDefinition Width="*"/>    <!-- Name + Icon -->
                                    <ColumnDefinition Width="Auto"/> <!-- Duration -->
                                </Grid.ColumnDefinitions>

                                <!-- Dot -->
                                <Ellipse Grid.Column="0" Width="12" Height="12" Fill="{Binding Color}" Margin="0,0,16,0"/>

                                <!-- Icon + Name -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold"
                                              Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Icon}" FontSize="16" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Duration -->
                                <TextBlock Grid.Column="2" Text="{Binding FormattedDuration}" 
                                          FontSize="14" Foreground="{StaticResource SecondaryTextBrush}" 
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
